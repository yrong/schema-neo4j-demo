{
  "mappings": {
    "doc": {
      "properties": {
        "geo_location": {
          "properties": {
            "location":{
              "type": "geo_point"
            }
          }
        }
      },
      "dynamic_templates": [
        {
          "string_as_keyword": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword"
            }
          }
        },
        {
          "string_as_date": {
            "match_mapping_type": "string",
            "match":   "*_date",
            "mapping": {
              "type": "date"
            }
          }
        }
      ]
    }
  }
}