{
  "id": "/Asset",
  "allOf":
  [
    {"$ref": "/ConfigurationItem"},
    {"properties":
      {
        "asset_id": {
          "type": "string"
        },
        "sn": {
          "type": "string"
        },
        "geo_location": {
          "type": "string"
        },
        "asset_location":{
          "type":"object",
          "oneOf":[
            {"properties" :
              {
                "cabinet":{"type":"string"},
                "date_mounted" : {
                  "type" : "string",
                  "format": "date"
                },
                "u" : {
                  "type" : "integer"
                }
              },
              "required":["u","date_mounted"]
            },
            {"properties" :
              {
                "location":{"type":"string"}
              },
              "required":["location"]
            }
          ]
        },
        "model":{
          "type": "string"
        },
        "product_date":{
          "type": "string",
          "format": "date"
        },
        "warranty_expiration_date":{
          "type": "string",
          "format": "date"
        },
        "retirement_date":{
          "type": "string",
          "format": "date"
        }
      }
    }
  ],
  "required": ["model", "product_date","warranty_expiration_date"]
}