{
  "name":"cmdb-api",
  "port":3001,
  "additionalPropertyCheck":false,
  "perPageSize":2000,
  "wrapResponse": true,
  "retrieveObjectFromId":true,
  "logger":{
    "appenders": [
      {
        "type": "console"
      },
      {
        "type": "file",
        "filename": "cmdb-api.log",
        "maxLogSize": 20480,
        "numBackups": 5
      }
    ],
    "replaceConsole": true,
    "defaultLevel":"DEBUG"
  },
  "neo4j": {
    "host": "localhost",
    "port": 7687,
    "http_port":7474,
    "user": "neo4j",
    "password": "neo4j"
  },
  "elasticsearch":{
    "host": "localhost",
    "port": 9200,
    "requestTimeout":3000,
    "mode": "strict"
  },
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "notifier":{
    "base_url":"http://localhost:3004/api/notifications"
  },
  "auth":{
    "check_token_url":"http://localhost:3002/auth/check"
  },
  "runtime_data":{
    "json_export_dir":"./export_data",
    "excel_import_dir":"./public/upload/ConfigurationItem",
    "qr_image_dir":"public/upload/QRImage"
  }
}